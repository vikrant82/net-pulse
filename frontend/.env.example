# Net-Pulse Frontend Environment Variables

# API Configuration
PUBLIC_API_BASE_URL=http://localhost:8000

# Application Configuration
PUBLIC_APP_NAME=Net-Pulse
PUBLIC_APP_VERSION=1.0.0

# Development Configuration
PUBLIC_DEBUG_MODE=false

# Feature Flags
PUBLIC_ENABLE_ANALYTICS=false
PUBLIC_ENABLE_ERROR_REPORTING=false

# Chart Configuration
PUBLIC_CHART_UPDATE_INTERVAL=5000
PUBLIC_CHART_HISTORY_HOURS=24

# Theme Configuration
PUBLIC_DEFAULT_THEME=dark
PUBLIC_THEME_AUTO_SWITCH=true